<!-- TEMPLATE - header -->

<header class="header">
    <section>
        <button id="btn-main-menu" class="btn btn-icon" title="Menu principal">
            <i class="fa-solid fa-bars"></i>
        </button>
    </section>
    <section>
        <ul>
            <li>
                <div>
                    <a title="Accueil" href="/" target="" style="position: absolute; top: -21px;">
                        <img src="<%- data_site.logo_icon %>" alt="logo du site" />
                    </a>
                </div>
            </li>
            <% data_header.links.forEach((elem)=> { %>
                <li>
                    <div>
                        <a class="link" title="<%= elem.title %>" href="<%= elem.href %>" target="<%= elem.target %>">
                            <%- elem.text %>
                        </a>
                    </div>
                </li>
            <% }) %>
        </ul>
    </section>
    <section>
        <button id="search" class="btn btn-icon" title="Rechercher">
            <i class='fa-solid fa-magnifying-glass'></i>
        </button>
    </section>
</header>