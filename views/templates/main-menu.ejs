<div class="main-menu global">
    <div class="main-menu-wrapper">
        <div class="main-menu-row main-menu-row-1">
            <button id="btn-close-main-menu" class="btn btn-icon" title="Fermer">
                <i class="fa-solid fa-xmark"></i>
            </button>
            <img class="img-xs" src="<%- data_site.logo_icon %>" />
            <button id="sun" class="btn btn-icon" title="ThÃ¨me Light">
                <i class="fa-solid fa-sun"></i>
            </button>
            <button id="moon" class="btn btn-icon" title="ThÃ¨me Dark">
                <i class="fa-solid fa-moon"></i>
